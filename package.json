{
  "name": "wifu-engine",
  "version": "1.0.2",
  "description": "A simple transparent overlay creator for Windows / MacOS / Linux using Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "lungiman",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lungiman.wifu-engine",
    "productName": "Wifu Engine",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "style.css",
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons"
    }
  }
}
